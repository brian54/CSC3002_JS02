<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".SecondaryActivity_settings">


    <TextView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please type in your personal information"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_settings_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/et_settings_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_settings_vegan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegan"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <Switch
            android:id="@+id/sw_settings_vegan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <TextView
        android:id="@+id/settings_health"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal health goals"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_settings_loseweight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lose weight"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <Switch
            android:id="@+id/sw_settings_loseweight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_settings_highprotein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Build strong muscle"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <Switch
            android:id="@+id/sw_settings_highprotein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_settings_lowsugarandsalt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consume less sugar and salt"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <Switch
            android:id="@+id/sw_settings_lowsugarandsalt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_settings_richfibre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Improve intestinal activity"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <Switch
            android:id="@+id/sw_settings_richfibre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_settings_richvitamin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prevent vitamin deficiency"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <Switch
            android:id="@+id/sw_settings_richvitamin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_settings_EPADHA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Improve brain function"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <Switch
            android:id="@+id/sw_settings_EPADHA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/secondary_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/tl_secondary_cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/primary_outsidetable"
        android:fitsSystemWindows="true"
        android:scaleType="fitXY"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ib_foodrecommendation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/primary_insidetable"
                android:src="@drawable/ml1" />

        </TableRow>

    </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>